---
import '@xz/fonts/serve/inter.css';;
import { description, title } from '../common.ts';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={ Astro.generator } />
        <meta name="description" content={ description } />
        <title>{ title }</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
:root {
  --nc-font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  --nc-bg-1: #1c8a99;
  --nc-bg-2: #00778e;
  --nc-tx-1: #005466;
}
html,input,select,button {
  font-family: var(--nc-font-sans);
  background: var(--nc-bg-1);
}

body {
	margin: 0 auto;
	overflow-x: hidden;
	word-break: break-word;
	overflow-wrap: break-word;
    display: grid;

	color: var(--nc-tx-1);
	font-size: 1.03rem;
	line-height: 1.5;

  width: 100dvw;
  height: 100dvh;
}

body::before {
  content: "";
  position: fixed; /* Keeps the dots in place as you scroll */
  top: 0;
  left: 0;
  width: 100dvw;
  height: 100dvh;
  z-index: -1; /* Pushes the dots behind your content */

  background: var(--nc-bg-2);
  mask-image: radial-gradient(circle, white 20%, transparent 25%);
  mask-size: 10px 10px;
}
</style>
